    );
  }
}

// student_data_model.dart
class Student {
  final String name;
  final int regNumber, mark1, mark2, mark3;

  Student({
    required this.name,
    required this.regNumber,
    required this.mark1,
    required this.mark2,
    required this.mark3,
  });
}

